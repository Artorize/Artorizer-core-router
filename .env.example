# Server Configuration
PORT=7000
HOST=127.0.0.1
NODE_ENV=development
WORKERS=auto  # Use 'auto' to detect CPU cores, or specify a number (default: 4)

# Redis (for Bull queue - future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Processor Core API
PROCESSOR_URL=http://localhost:8000
PROCESSOR_TIMEOUT=30000

# Backend Storage API (handles all database operations)
# Note: Uses dynamic one-time tokens for authentication (no static token needed)
BACKEND_URL=http://localhost:5001
BACKEND_TIMEOUT=30000

# Router Configuration
ROUTER_BASE_URL=http://localhost:7000
CALLBACK_AUTH_TOKEN=change-this-to-a-secure-random-token

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# File Upload Limits
MAX_FILE_SIZE=268435456

# Self-Update Configuration
AUTO_UPDATE_ENABLED=true  # Set to 'false' to disable automatic updates on startup

# Database Configuration (required for authentication)
DB_HOST=localhost
DB_PORT=5432
DB_USER=artorizer
DB_PASSWORD=your-secure-password
DB_NAME=artorizer_db

# Authentication Configuration (Better Auth)
# Set AUTH_ENABLED=true to enable authentication
AUTH_ENABLED=false

# Better Auth Secret (generate with: openssl rand -base64 32)
# REQUIRED when AUTH_ENABLED=true
BETTER_AUTH_SECRET=

# Better Auth Base URL (your router's public URL)
# REQUIRED when AUTH_ENABLED=true
BETTER_AUTH_URL=https://router.artorizer.com

# CORS - Frontend origins that can make authenticated requests
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://artorizer.com,http://localhost:8080

# Google OAuth (from Google Cloud Console)
# Get credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (from GitHub Developer Settings)
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
